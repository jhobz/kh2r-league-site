---
import ThemeSwitcher from './ThemeSwitcher.astro'

const links = [
    { name: 'Home', href: '/' },
    { name: 'Leaderboard', href: '/leaderboard' },
    { name: 'Route Map', href: '/routemap' },
    { name: 'Sign Up / Login', href: '/signin' },
]
---

<nav class="navbar bg-base-100 shadow-lg">
    <div class="navbar-start min-w-max">
        <div class="dropdown">
            <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h8m-8 6h16"></path>
                </svg>
            </div>
            <ul
                tabindex="0"
                class="menu menu-sm dropdown-content bg-base-200 rounded-box z-1 mt-3 w-max p-2 shadow"
            >
                {
                    links.map(({ href, name }) => (
                        <li>
                            <a href={href}>{name}</a>
                        </li>
                    ))
                }
            </ul>
        </div>

        <a href="/" class="flex gap-1 items-center text-xl ml-2">
            <img class="size-12" src="/images/logo.png" />
            <span class="logo">KH2 Rando</span>
        </a>
    </div>

    <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1">
            {
                links.map(({ href, name }) => (
                    <li>
                        <a href={href}>{name}</a>
                    </li>
                ))
            }
        </ul>
    </div>

    <div class="navbar-end">
        <ThemeSwitcher />
    </div>
</nav>

<style>
    .logo,
    .menu {
        font-family: 'khmenu';
    }
</style>
